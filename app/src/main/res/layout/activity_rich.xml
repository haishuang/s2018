<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rich"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.hais.s2018.rich.RichActivity">
    <TextView
        android:id="@+id/tv_submit"
        android:background="#8a9c6b"
        android:text="提交"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <com.lu.richtexteditorlib.SimpleRichEditor
        android:layout_below="@+id/tv_submit"
        android:id="@+id/rich_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lu_bottom_menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.lu.lubottommenu.LuBottomMenu
        android:id="@+id/lu_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"></com.lu.lubottommenu.LuBottomMenu>

</RelativeLayout>
